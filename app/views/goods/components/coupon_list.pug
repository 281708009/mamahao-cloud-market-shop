if vouchers.length
    .nav-list.js-nav-list
        //-按照优惠金额排序
        - var vouchersList = vouchers.concat().sort(function(a,b){return b.amount-a.amount});
        p
            em 领劵
            | #{vouchersList[0].des}

    // 优惠劵列表 .show显示
    ul.none(data-pop="m-goods-coupon")
        each item in vouchers
            li(data-id=item.voucherId)
                dl
                    dt
                        strong
                            sub ￥
                            | #{item.amount}
                        p #{item.des}
                    dd
                        p 适用范围：#{item.applyDes}
                        p 有效期至：#{item.timeDes}
                .button
                    if !item.isReceive
                        button.u-btn.mini.success.ban 已领取
                    else
                        button.u-btn.mini.success.js-voucher 立即领取
