section.m-address-edit.m-address-add.flex-column
    .flex
        ul.u-form.fm-addr-info
            li
                em 收货人：
                .field
                    input.name(name='name',type='text', placeholder='请输入收货人的姓名',maxlength='64')
            li
                em 手机号：
                .field
                    input.mobile(name='mobile',type='tel',data-type='mobile', placeholder='请输入收货人的手机号码',maxlength='11')
            li.u-arrow.right
                em 地　区：
                input.district.js-district(name='district',type='text', placeholder='请选择省份、城市、区域',maxlength='255',readonly)
            li
                em 街　道：
                input.street.js-street(name='street',type='text', placeholder='请选择小区/写字楼等',maxlength='255',readonly)
                .gps.js-gps 定位
            li
                em 门牌号：
                input.house-number(name='house_number',type='text', placeholder='请填写具体单元号 楼层等',maxlength='255')
            li
                span.tip 设为默认
                input.isDefault.u-switch(type='checkbox')
    section.u-footer-button
        ul
            li
                button.u-btn.max.success.alone.js-submit 保存

// 选择省市区
section.u-fixed.right.u-area
    .mask
    .content
        ul.u-form.gap.fm-addr-pcd
            li
                em 省 份
                .field
                    select#list-pro
            li
                em 城 市
                .field
                    select#list-city
            li
                em 区 域
                .field
                    select#list-area
        .u-submit
            button.u-btn.success.alone.js-confirm 确定
