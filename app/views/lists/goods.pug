//- 商品列表;
include ../includes/let.pug
if rows && rows.length
    each item in rows
        li
            -var href = '/goods/detail?inlet='+ (inlet || 6) +'&templateId=' + item.templateId + '&itemId=' + (item.itemNumId || item.itemId);
            -if(extra) href += extra;
            a(href=href)
                .pic
                    img(data-original=item.goodsPic + '@1e_400w_400h_0c_0i_0o_100q_1x.jpg', src=placeholderPic, alt=item.itemName)
                    //- topRightTag，枚举：0不显示 1 赠 2 券
                    case item.topRightTag
                        when 1
                            sup 赠
                        when 2
                            sub 劵
                .info
                    h3 #{item.itemName}
                    .tools
                        strong ￥#{item.price}
                        //- (1,"直降促销"),(3,"满赠促销"),(4,"组合促销"),(5,"满减促销"),(6,"赠品促销"),(-99,"促销类型错误");
                        if item.proTag && item.proTag.length
                            if item.proTag.length > 1
                                em 多重优惠
                            else
                                case item.proTag[0]
                                    when 1
                                        em 直降
                                    when 3
                                        //- em 满赠
                                    when 4
                                        em 套餐
                                    when 5
                                        em 满减
                                    when 6
                                        //- em 赠品

                    .sales(class={"vi-hidden": !item.totalSale}) 已售#{item.totalSale}件