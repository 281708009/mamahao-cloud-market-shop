extends ../layouts/initial.pug
block title
    title 摇妈豆
block meta
    script(type='text/javascript').
        var sw = window.screen.width > 414 ? 414 : window.screen.width;
        /ucbrowser/gi.test(navigator.userAgent) && (sw = window.screen.width);
        var phoneScale = parseInt(sw) / 750;
        document.write('<meta name="viewport" content="width=750, minimum-scale=' + phoneScale + ', maximum-scale=' + phoneScale + ', target-densitydpi=device-dpi">');
    meta(itemprop='name', content='快来摇，你有1棵摇钱树')
    meta(itemprop='description', name='description', content='速来围观！我刚摇下一大波金豆子，可以直接兑换成现金使用！')
    meta(itemprop='image', content='http://img.mamhao.cn/s/app/beans/images/share.jpg')
block css
    link(type='text/css', href='http://s.mamhao.cn/app/beans/style/v3.css', rel='stylesheet')
block js
    script seajs.run('mamahao/beans');
